<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/logon"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="team4.code_for_good.SignUp"
    tools:showIn="@layout/activity_sign_up">


    <TextView
        android:text="Sign Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/firstName"
        android:layout_alignStart="@+id/firstName"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="27dp"
        android:id="@+id/signUp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="First Name:"
        android:ems="10"
        android:textColor="#ffffff"
        android:id="@+id/firstName"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Zip Code:"
        android:ems="10"
        android:id="@+id/zipCode"
        android:textColor="#ffffff"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/buttonSignUp"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email:"
        android:ems="10"
        android:id="@+id/email"
        android:textColor="#ffffff"
        android:layout_above="@+id/zipCode"
        android:layout_alignLeft="@+id/firstName"
        android:layout_alignStart="@+id/firstName" />


    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSignUp"
        android:layout_marginBottom="153dp"
        android:layout_above="@+id/signUp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
